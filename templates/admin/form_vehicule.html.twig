{% extends "base.html.twig" %}

{% block body %}

<div class="text-center">
<h1 class="mb-4">
    {% if editMode %}
        Modification du véhicule
    {% else %}
        Création d'un véhicule 
    {% endif %}
</h1>
</div>

{# form() est une fonction twig permettant d'afficher un formulaire #}
{# {{ form(formArticle) }} #}

{{ form_start(formEdit, {
    attr : {
        'class': 'col-md-7 mx-auto'
    }
}) }}
{# form_start() et form_end() permettent de délimiter un formulaire, de modifier ses champs, de changer la méthode du formulaire ...  #}

{# form_row() permet de gérer l'affichage d'un champ et de son label #}
{{ form_row(formEdit.title, { 'attr': {'placeholder': "Titre"} }) }}
{{ form_row(formEdit.brand, { 'attr': {'placeholder': "Marque"} }) }}
{{ form_row(formEdit.model, { 'attr': {'placeholder': "Modèle"} }) }}
{{ form_row(formEdit.content, { 'attr': {'placeholder': "Description Technique", 'rows': 15} }) }}
{{ form_row(formEdit.imageFile) }}
{{ form_row(formEdit.price, { 'attr': {'placeholder': "Tarif Jour"} }) }}

<div class="text-center">
<button type="submit" class="btn btn-primary mt-2">
    {% if editMode %}
        Enregistrer les modifications ✅
    {% else %}
        Ajouter l'article ✅
    {% endif %}
</button>
</div>

{{ form_end(formEdit) }}

{% endblock %}